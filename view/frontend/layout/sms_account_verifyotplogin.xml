<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <title>Verify OTP Login?</title>
    </head>
    <body>
        <referenceBlock name="root">
            <action method="setHeaderTitle">
                <argument translate="true" name="title" xsi:type="string">Verify OTP Login</argument>
            </action>
        </referenceBlock>

        <referenceContainer name="content">
            <block class="Ecommage\Sms\Block\VerifyOtpLogin" name="verifyotplogin" template="Ecommage_Sms::verify-otp-login.phtml">
                <container name="form.additional.info" as="form_additional_info"/>
            </block>
        </referenceContainer>

    </body>
</page>
